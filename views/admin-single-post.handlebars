<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<div class="card">
        <a href='/dashboard/{{id}}' style="color: black; font-size: 20pt"> {{post.title}}</a>
        <br>
    <div class="body">
        <p>{{post.body}}</p>
        <br>
        <h5 style="text-align: right">Posted by {{post.user.username}} on {{format_date post.createdAt}}</h5>
    </div>


    <button type="button" class="btn btn-primary submit-btn">
            <a href="/dashboard/edit/{{post.id}}">
            <i class="fa fa-pencil-square-o fa-1x" aria-hidden="true"></i> Edit
            </a>
        </button>
        <button type="button" class="btn btn-danger delete-btn" value="{{id}}">
            <i class="fa fa-trash-o fa-1x" aria-hidden="true"></i> Delete
            </a>
        </button>
</div>



{{!-- post template --}}
{{#each post.comments as | comment | }}
<div class="container">
    <div class="card px-5 py-4 my-2">
            <div class="body">
                {{comment.body}}
            </div>
            <h5 style="text-align: right">Comment by {{comment.user.username}} on {{format_date comment.createdAt}} </h5>
    </div>
</div>
{{/each}}


<div class="card-body">
        <form class="form comment-form" id="comment-form" style="display: block;">
            <h3>Add a Comment</h3>
            
            <div class="form-group">
                <input class="form control" id="textArea" placeholder="Add a comment..." type="text">
            </div>
            <div class="form-group">
                <button class="comment-btn btn-primary" type="submit" value="{{post.id}}">Add comment</button>
            </div>
        </form>
</div>

<script type="text/javascript" src="/js/comment.js"></script>