<script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script> 
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js'></script>


<div class="card">
    <header class="card-header">Edit a Blog Post</header>
    <div class="card-body">
        <form class="form" id="edit-post">
            <div class="form-group">
                <label for="title" class="text-header">Title</label>
                <br>
                <input class="form-control" type="text" id="new-title" placeholder="New Title">
            </div>
            
            <div class="form-group">
                <label for="body" class="text-header">Body</label>
                
                <textarea class="form-control" name="body" id="new-body" placeholder="New Body"></textarea>
            </div>
            <button type="submit" class="btn btn-primary update-btn" value="{{editPostData.id}}">Update Post</button>
            
            {{!-- <button type="button" class="btn btn-danger delete-btn">Delete Post</button> --}}
    </div>
</div>

<script type="text/javascript" src="/js/edit.js"></script>
