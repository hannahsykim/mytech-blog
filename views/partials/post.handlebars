<div class="container">
    <div class="card">
        <a href="/post/{{id}}">{{title}}</a>
        <h5>Posted by {{user.username}} on {{createdAt}}</h5>
        <br>
        
        <p>{{body}}</p>

        <button type="button" class="btn btn-primary">
            <a href="/post/{{id}}">
            <i class="fa fa-pencil-square-o fa-1x" aria-hidden="true"></i> Edit
            </a>
        </button>
        <button type="button" class="btn btn-danger">
            <a href="/post/{{id}}">
            <i class="fa fa-trash-o fa-1x" aria-hidden="true"></i> Delete
            </a>
        
    </div>
</div>