<div class="container-fluid">
    <div class="row">
        <button class="add-post">
            <a href="/dashboard/create">
            <i class="fa fa-plus-circle fa-1x" aria-hidden="true"></i> Create a Post
            </a>
        </button>
    </div>
</div>

<h1>MY POSTS</h1>

<div class ="row">
    <div class ="column">
       
        {{#each posts as | userPost | }}
        {{> post this}}
        <button type="button" class="btn btn-primary submit-btn">
            <a href="/dashboard/edit/{{userPost.id}}">
            <i class="fa fa-pencil-square-o fa-1x" aria-hidden="true"></i> Edit
            </a>
        </button>
        <button type="button" class="btn btn-danger delete-btn" value="{{post.id}}">
            <i class="fa fa-trash-o fa-1x" aria-hidden="true"></i> Delete
            </a>
        </button>
        {{/each}}
    </div>
    
</div>

<script src="/js/delete.js"></script>
<script src="/js/edit.js"></script>
